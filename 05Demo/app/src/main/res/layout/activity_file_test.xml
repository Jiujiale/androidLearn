<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FileActivityTest">

    <EditText
        android:id="@+id/file_data_ed01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="click save to update"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/file_data_btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save"
        app:layout_constraintTop_toBottomOf="@+id/file_data_ed01"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/file_data_btn_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="read"
        app:layout_constraintTop_toBottomOf="@+id/file_data_btn_save"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/file_data_tv01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/file_data_btn_read"
        tools:layout_editor_absoluteX="-30dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="External data update"
        app:layout_constraintTop_toBottomOf="@+id/file_data_tv01"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/file_data_btn_save_external"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="save external data"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/file_data_btn_read_external"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="read external data"
        app:layout_constraintTop_toBottomOf="@+id/file_data_btn_save_external"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/file_data_tv02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hello default"
        app:layout_constraintTop_toBottomOf="@+id/file_data_btn_read_external"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>